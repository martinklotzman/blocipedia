<!DOCTYPE html>
<html>
  <head>
    <title>Blocipedia</title>
    <%= csrf_meta_tags %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <ul class="nav nav-tabs">
        <li><%= link_to "Blocipedia", root_path %></li>
        <li><%= link_to "About", about_path %></li>
        <li><%= link_to "Wikis", wikis_path %></li>
        <li><%= link_to "Membership", new_charge_path %></li>
        <% if user_signed_in? %>
          <strong><%= current_user.email %> - <%= current_user.role %></strong> | <%= link_to 'Edit profile', edit_user_registration_path, class: 'navbar-link' %> - <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'navbar-link' %>
        <% else %>
          <li class="pull-right"><%= link_to "Sign In", new_user_session_path %></li>
          <li class="pull-right"><%= link_to "Sign Up", new_user_registration_path %></li>
        <% end %>
      </ul>
    <%= yield %>
  </div>
  </body>
</html>
